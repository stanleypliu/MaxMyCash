<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="chatroom">
      <!--   <%= @booking.listing.currency_amount %>
        <%= @booking.listing.currency %> -->
        <div class="chatroom-title">
          <p class="chatroom-header">Chat between <%= @booking.listing.user.first_name.capitalize %> and <%= @booking.user.first_name.capitalize %></p>
          <%= link_to 'Go back', dashboard_path, class: 'blue-gradient-button-chatroom'  %>
        </div>
        <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
          <% @chatroom.messages.each do |message| %>
            <div class="message-container">
              <div class="d-flex align-items-center">
                <% if message.user.photo.attached? %>
                  <%= cl_image_tag message.user.photo.key, class: "avatar-xs mr-2" %>
                <% end %>
                <i class="author">
                  <span><%= message.user.email %></span>
                  <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
                </i>
              </div>
              <p class="message-content <%= "message-content-other" if current_user != message.user %> "><%= message.content %></p>
            </div>
          <% end %>
        </div>

        <%= simple_form_for [ @chatroom, @message ] do |f| %>
          <%= f.input :content, label: false, placeholder: "Type your message here ðŸ˜‰" %>
        <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
