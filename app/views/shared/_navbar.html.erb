<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= 'fixed-top' if params[:action] == 'home' %>">
  <div class="d-flex align-items-center">
    <%= link_to root_path, class: "navbar-brand" do %>
      <h2 class="<%= params[:action] == ('home'||'listings.index') ? 'logo-title-white' : 'logo-title-dark' %>">Revo<span>new</span></h2>
    <% end %>

    <% if user_signed_in? %>
      <% if !current_page?(dashboard_path) %>
        <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
      <% end %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "navbar-link" %>
      <%= link_to "Sign up", new_user_registration_path, class: "navbar-link" %>
      <%= link_to "How does it work?", "#", class: "navbar-link" %>
      <%= link_to "About", "#", class: "navbar-link" %>
    <% end %>
  </div>

  <% if current_page?(root_path) %>
    <%= link_to "Exchange My Cash", new_listing_path, class: "black-gradient-button" %>
  <% end %>


</div>
