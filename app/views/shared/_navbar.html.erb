<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <div class="d-flex align-items-center navbar-left">
    <%= link_to root_path, class: "navbar-brand" do %>
      <h2 class="<%= params[:action] == 'home' || 'index' || 'new' ? 'logo-title-white' : 'logo-title-dark' %>">Revo<span>new</span></h2>
    <% end %>

    <% if user_signed_in? %>
      <% if !current_page?(dashboard_path) %>
        <%= link_to "Dashboard", dashboard_path, class: "navbar-link hvr-underline-from-left-dashboard" %>
      <% end %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "navbar-link hvr-underline-from-left-dashboard" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "navbar-link hvr-underline-from-left-dashboard" %>
      <%= link_to "Sign up", new_user_registration_path, class: "navbar-link hvr-underline-from-left-dashboard" %>
      <%= link_to "About", about_path, class: "navbar-link hvr-underline-from-left-dashboard" %>
    <% end %>
  </div>

  <% if current_page?(root_path) %>
    <%= link_to "New Exchange", new_listing_path, class: "black-gradient-button" %>
  <% end %>


</div>
