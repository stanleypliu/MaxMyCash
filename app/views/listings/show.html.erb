<% content_for :meta_title, "Book your #{@listing.currency} on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, "Find exchanges for #{@listing.currency} and so much more on Revonew" %>

<div class='container'>
  <div class="listing-card-title"><p> Where ? => <%= @listing.location %></p><div class="listing-card-title-money"><p><p> What ? => <%= @listing.currency %> <%= @listing.currency_amount %></p></div></div>
  <p><%= @listing.user.first_name  %> <%= @listing.user.last_name %></p>
  <p>Important message : <%= @listing.message %></p>
  <div>
	<% if @listing.user == current_user %>
		<%= link_to "edit", edit_listing_path(@listing)  %>
		<% else%>
		  <%= link_to "book me", listing_bookings_path(@listing), method: :post %>
	<% end %>
  </div>
</div>
