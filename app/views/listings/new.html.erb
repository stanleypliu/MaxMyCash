<div class="bg-dark min-height">
  <div class="container">
    <div class="d-flex listing-container">
      <div class="payment">
        <%= image_tag "payment-processed.png", alt: "payment processed" %>
      </div>
      <div class="form-card">
        <h2><b>Exchange Your Cash</b></h2>
        <!-- <hr> -->
        <%= simple_form_for(@listing) do |f| %>
          <%= f.input :currency_amount, input_html: {class: 'currency-amount'} %>
          <%= f.input :currency, collection: @currencies, input_html: {class: 'dropdown-currency'} %>
          <div class="exchanged-currency"></div>
          <%= f.input :location %>
          <%= f.input :message %>
          <%= f.submit 'Create listing', class: 'blue-gradient-button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
