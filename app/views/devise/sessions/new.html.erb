<div class="sign-in-container pt-5">
  <h2 class="logo-title-dark">Revo<span>new</span></h2>
  <div class="sign-in-card">
    <div class="sign-in-card-content text-left">
      <h5 class="sign-into-your-account">Sign into your account</h5>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Continue", class:"btn blue-gradient-button" %>
        </div>
        <% end %>
        <div class="sign-in-links">
      </div>
    </div>
  </div>
   <%= render "devise/shared/links" %>
</div>
